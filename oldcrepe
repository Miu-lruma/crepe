#!/usr/bin/env python3

import argparse
import configparser
import os.path
import sys
import datetime

#TODO: Add js, py, html, sh, java, shebangs
#TODO: Python version with path?

# Creates file for c/c++/header files
def c(params):
    printstr = ""
    if (params["length"] % 2 == 1):
        params["length"] = params["length"] + 1

    # Adds initial block
    if params["quiet_decoration"]:
        printstr += cbreak(params, cline({"line": "", "length": params["length"], "quiet_char": params["quiet_char"]}))
    printstr += cbegin(params)\
    + cbreak(params, cline({"line": params["filename"], "length": params["length"], "quiet_char": " "}))\
    + cbreak(params, cblank(params))\
    + cbreak(params, cline({"line": params["name"], "length": params["length"], "quiet_char": " "}))\
    + cbreak(params, cline({"line": params["datestring"], "length": params["length"], "quiet_char": " "}))

    # Will only add the current time if the option is selected
    if (params["display_time"]):
        printstr += cbreak(params, cline({"line": params["timestring"], "length": params["length"], "quiet_char": " "}))

    if params["quiet_decoration"]:
        printstr += cbreak(params, cline({"line": "", "length": params["length"], "quiet_char": params["quiet_char"]}))
    printstr += cend(params)\
    + "\n\n"

    # Begins following blocks
    printstr += cbegin(params)\
    + cbreak(params, cline({"line": "Preprocessor Directives", "length": params["length"], "quiet_char": params["quiet_char"]}))\
    + cend(params)

    # Adds directives
    if params["display_code"]:
        # Adds definitions if header file
        if params["extension"][0].lower() == "h":
            printstr += "\n#ifndef "\
            + "_".join(params["filename"].rsplit(".")[:-1]).upper()\
            + "_H\n#define "\
            + "_".join(params["filename"].rsplit(".")[:-1]).upper()\
            + "_H"

            if params["extension"].lower() == "h":
                printstr += "\n\n#include <stdio.h>\n#include <stdlib.h>\n"
            else:
                printstr += "\n\n#include <iostream>\n#include <string>\n"

        # Differentiates between C and C++
        elif params["extension"].lower() == "c":
            printstr += "\n#include <stdio.h>\n#include <stdlib.h>\n"
        else:
            printstr += "\n#include <iostream>\n#include <string>\n\nusing std::cin;\nusing std::cout;\nusing std::endl;\nusing std::string;\n"

    printstr += space(params["rows_between_headers"])\
    + cbegin(params)\
    + cbreak(params, cline({"line": "Global Declarations", "length": params["length"], "quiet_char": params["quiet_char"]}))\
    + cend(params)\
    + space(params["rows_between_headers"])\
    + cbegin(params)\
    + cbreak(params, cline({"line": "Classes", "length": params["length"], "quiet_char": params["quiet_char"]}))\
    + cend(params) + space(params["rows_between_headers"])

    # Adds main execution if not a header file
    if params["extension"][0].lower() == "c":
        printstr += cbegin(params)\
        + cbreak(params, cline({"line": "Main Execution", "length": params["length"], "quiet_char": params["quiet_char"]}))\
        + cend(params)

        if params["display_code"]:
            printstr += "\nint main(int argc, char *argv[]) {"\
            + space(params["rows_between_headers"])\
            + "\n}\n\n"
        else:
            printstr += space(params["rows_between_headers"])

        printstr += cbegin(params)\
        + cbreak(params, cline({"line": "Functions", "length": params["length"], "quiet_char": params["quiet_char"]}))\
        + cend(params)\
        + space(params["rows_between_headers"])
    elif params["display_code"]:
        printstr += "\n#endif\n\n"

    if params["display_watermark"]:
        printstr += "/*"\
        + cline({"line": "File generated by Crepe", "length": params["length"], "quiet_char": params["quiet_char"]})\
        + "*/ \n"

    return(printstr)

